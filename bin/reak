#!/usr/bin/env ruby
begin
  require "rubygems"
  require "bundler/setup"
rescue LoadError => e
  e.render
end

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'reak'
require 'pp'

ast, sexp, bench, syntax, show_tree, compile, evals = false, false, false, :reak, false, false, []

options = Rubinius::Options.new "Usage: #$0 [options] [script]", 20

options.on "-A", "Print the AST" do
  ast = true
end

options.on "-S", "Print the S-Expression" do
  sexp = true
end

options.on "-e", "CODE", "Execute CODE" do |e|
  evals << e
end

options.on "-s", "SYNTAX", "What SYNTAX to use (ansi, gst, reak)" do |s|
  syntax = s.to_sym
end

options.on "-B", "Benchmark parsing" do
  bench = true
end

options.on "-T", "Show parse result (use this if -A fails)" do
  show_tree = true
end

options.on "-c", "Compile" do
  compile = true
end

options.on "-h", "--help", "Display this help" do
  puts options
  exit 0
end

file = options.parse(ARGV).first

display = proc do |code|
  tree = nil
  parser = Reak::Parser.new(syntax)

  if (compile)
    begin
      parser.compile(code)
    rescue
      require 'pry'
      puts "see lvar tree"
      tree = parser.parse(code)
      binding.pry
    end
    return
  end

  if bench
    require 'benchmark'
    Benchmark.bmbm do |x|
      x.report { tree = parser.parse(code) }
    end
  else
    tree = parser.parse(code)
  end

  if show_tree
    puts "========= TREE ========"
    pp tree
    puts "------------------------"
  end

  if ast
    puts "========= AST ========="
    tree.graph
    puts "------------------------"
  end

  if sexp
    puts "===== S-expression ====="
    pp tree.to_sexp
    puts "------------------------"
  end

  begin
    puts Reak::Compiler.new.compile(code).call.reak_send("printString")
  rescue Exception => e
    e.render
  end
end

evals << File.read(file) if file

if evals.empty?
  if $stdin.tty?
    require 'readline'
    loop do
      code = Readline.readline "st> "
      exit 0 unless code and code != "exit"
      display[code]
    end
  else
    evals << STDIN.read
  end
end

evals.each(&display)
